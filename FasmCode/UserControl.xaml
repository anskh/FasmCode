<UserControl x:Class="FasmCode.TabCloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FasmCode"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Button x:Name="btn" Click="OnClick" BorderThickness="0" Margin="5,0,0,0" Padding="3,0,3,0" Background="Transparent">
        <Path Data="M1,9 L9,1 M1,1 L9,9" StrokeThickness="1" >
            <Path.Style>
                <Style TargetType="{x:Type Path}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=btn, Path=IsMouseOver}" Value="False">
                            <Setter Property="Stroke" Value="LightGray" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=btn, Path=IsMouseOver}" Value="True">
                            <Setter Property="Stroke" Value="Black" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Path.Style>
        </Path>
    </Button>
</UserControl>